{{% handler:NewPost}}{{!

This is the mustache template file for the tap tracker example.

}}
<style>
td.details-control {
background: url('http://i.imgur.com/SD7Dz.png') no-repeat center center;
cursor: pointer;
}


tr.shown td.details-control {
background: url('http://i.imgur.com/d4ICC.png') no-repeat center center;
}

</style>

{{#sprint}}
<div class="row">

    <div class="large-6 columns">

        <h3> Detail </h3>
        <dl>
            <dt>Description</dt>
            <dl>{{title}}</dl>
            <dt>Date created</dt>
            <dl>{{dateCreated}}</dl>
            <dt>Expected duration</dt>
<dl>{{duration}}</dl>
            <dt>Expected completion date</dt>
            <dl></dl>
        </dl>

    </div>


	<div class="large-6 columns">
		<h3>Sprint Burndown Chart</h3>

		{{#burndownChart}}
		<canvas id="canvas" height="300" width="300"></canvas>
		<script>
			var ctx = document.getElementById("canvas");
			var myChart = new Chart(ctx, {
				type: 'bar',
				data: {
				labels: {{{labels}}},
				datasets: [{
				type: 'bar',
				label: '# of Hours',
				data: {{workRemaining}},
				backgroundColor: "#2199e8"
			},
			{
				type: 'line',
				label: 'Expected Hours remaining',
				data: {{projectedWorkRemaining}},
				fill: false
			}
			]
			},
				options: {
				scales: {
				yAxes: [{
				ticks: {
				beginAtZero:true
			}
			}]
			}
			}
			});
		</script>
		{{/burndownChart}}




	</div>




</div>

<div class="row " style="top-margin:2%">
<div  class = "large-6 columns">
<h3> Sprint backlog</h3>
<table id="sprintBacklog">
	<thead>
		<tr>
			<td>Title</td>
			<td>Priority</td>
			<td>Estimates</td>
			<td>Status</td>
			<td></td>
		</tr>
	</thead>
	<tbody>
	{{#userStory}}
		<tr>
			<td>{{title}}</td>
			<td>{{priority}}</td>
			<td>{{estimate}}</td>
			<td>{{status}}</td>
<td><a href="/tasks/new?sprintID={{identifier}}&storyID={{objectID}}"class="warning button">Add task</a></td>
		</tr>
	{{/userStory}}
	</tbody>
</table>

</div>

<div class="large-6 columns">
<h3> Task List </h3>
<table id="taskList" class ="large-6 columns" style="width:100%">
	<thead>
		<tr>
			<td>Title</td>
			<td>Estimate (In hour)</td>
			<td>Priority</td>
			<td>Status</td>
			<td>Assignee</td>
			<td>Belong to</td>
		</tr>
	</thead>
	<tbody>
{{#tasks}}
		<tr>
<td><a href="{{urlPath}}">{{title}}</a></td>
			<td>{{estimates}}</td>
			<td>{{priority}}</td>
			<td>{{status}}</td>
			<td>None</td>
			<td>None</td>

		</tr>
{{/tasks}}
	</tbody>


</table>
</div>
</div>

<h3>Comments</h3>
{{#commentList}}
{{#comment}}
{{#user}}

<div class="row">
	<div class="large-12 columns">

	<div class="profile-pic-med avatar">{{initials}}</div>

    <div class="message large-11 columns">
        <strong>{{name}}</strong>
        <br>
        <div id="{{commentIndicator}}{{initials}}" class="row large-10 columns">
        {{comment}}
        </div>
            <a id="cancelButton{{commentIndicator}}" onclick="cancelEditComment('{{commentIndicator}}{{initials}}', 'saveButton{{commentIndicator}}','cancelButton{{commentIndicator}}')" style="display:none" class="blueButton button">Cancel</a>

            <a style="display:none" id="saveButton{{commentIndicator}}" onclick="postEditComment('{{commentIndicator}}{{initials}}', 'saveButton{{commentIndicator}}', '{{identifier}}', '{{commentIndicator}}')" class="blueButton button">
            Post
            </a>

            <a onclick="editComment('{{commentIndicator}}{{initials}}', 'saveButton{{commentIndicator}}', 'cancelButton{{commentIndicator}}')" style="display:{{visibility}}" class="orangeButton button">Edit</a>


            <a method="post" href="{{identifier}}_{{commentIndicator}}/deletecomment" style="display:{{visibility}}" class="redButton button">
            Delete
            </a>


        <br>
    </div>



    {{/user}}
    {{/comment}}
    {{/commentList}}
	<div class="row">
	<div class="large-12 columns">

	<form action="{{url}}/comments" method="post">
	<label>Comment
	<input type="text" name="comment" />
	</label>
	<input type="submit" value="Post">
	</form>
	</div>
	</div>
	</div>

</div>



<script>
$("#sprintBacklog").DataTable({
paging:false,
searching:true,
autowidth:false,
info:false
}

);
$("#taskList").DataTable({
paging:false,
searching:true,
autowidth:false,
info:false
}

);


</script>

{{/sprint}}



