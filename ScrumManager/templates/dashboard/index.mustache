<dl>
<dt>Project</dt>
<dl>{{name}}</dl>
<dt>Description</dt>
<dl>{{projectDescription}}</dl>
<dt>End Date</dt>
<dl>{{formattedDate}}</dl>
<dt>Scrum Master</dt>
