<div style="margin-top:2%">
<div class ="row">
{{#project}}

{{#releaseBurndown}}
<div class="large-6 columns">
<h3>Release Burndown</h3>

<canvas id="canvas" height="300" width="300"></canvas>
<script>
var ctx = document.getElementById("canvas");
var myChart = new Chart(ctx, {
type: 'bar',
data: {
labels: {{{labels}}},
datasets: [{
type: 'bar',
label: '# of Hours',
data: {{workRemaining}},
backgroundColor: "#2199e8"
},
{
type: 'line',
label: 'Expected Hours remaining',
data: {{projectedWorkRemaining}},
fill: false
}
]
},
options: {
scales: {
yAxes: [{
ticks: {
beginAtZero:true
}
}]
}
}
});
</script>
</div>
{{/releaseBurndown}}

{{#sprintBurndown}}
<div class="large-6 columns">
<h3>Sprint Burndown</h3>

<canvas id="sprintBurndown" height="300" width="300"></canvas>
<script>
var ctx = document.getElementById("sprintBurndown");
var myChart = new Chart(ctx, {
type: 'bar',
data: {
labels: {{{labels}}},
datasets: [{
type: 'bar',
label: '# of Hours',
data: {{workRemaining}},
backgroundColor: "#2199e8"
},
{
type: 'line',
label: 'Expected Hours remaining',
data: {{projectedWorkRemaining}},
fill: false
}
]
},
options: {
scales: {
yAxes: [{
ticks: {
beginAtZero:true
}
}]
}
}
});
</script>
</div>
{{/sprintBurndown}}


{{#memberTasks}}
<div class="large-6 columns">
<h3>Assigned Tasks</h3>
<ul>

{{#tasks}}

<li><a href="{{urlPath}}">{{title}}</a></li>
{{/tasks}}
</ul>
</div>
{{/memberTasks}}

{{#sprintBacklog}}
<div class="row">
<div class="large-12 columns">
<h3>Sprint Backlog</h3>
{{#tasks}}
<a href="{{urlPath}}">{{title}}</a>
{{/tasks}}
</div>
</div>
{{/sprintBacklog}}

{{#details}}
