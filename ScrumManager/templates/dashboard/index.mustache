<div style="margin-top:2%">
<div class ="row">
{{#project}}
<div class="large-6 columns">
{{#burndownChart}}
<h3>Burndown Chart</h3>

<canvas id="canvas" height="300" width="300"></canvas>
<script>
var ctx = document.getElementById("canvas");
var myChart = new Chart(ctx, {
type: 'bar',
data: {
labels: {{{labels}}},
datasets: [{
type: 'bar',
label: '# of Hours',
data: {{workRemaining}},
backgroundColor: "#2199e8"
},
{
type: 'line',
label: 'Expected Hours remaining',
data: {{projectedWorkRemaining}},
fill: false
}
]
},
options: {
scales: {
yAxes: [{
ticks: {
beginAtZero:true
}
}]
}
}
});
</script>
{{/burndownChart}}
</div>
<div class="large-6 columns">
<h3>Assigned Tasks</h3>

{{#tasks}}
<a href="{{urlPath}}"><h4>{{title}}</h4></a>
{{/tasks}}

</div>
{{/project}}
{{^project}}
<h1>No projects </h1>
{{/project}}
</div>
</div>

<div class="row">
<div class="large-12 columns">
<h3>Sprint Backlog</h3>
{{#sprintTasks}}
<a href="{{urlPath}}"><h4>{{title}}</h4></a>
{{/sprintTasks}}
</div>
</div>

<div class="row">
<div class="large-12 columns">
<h3>Projects</h3>
{{#projects}}
<a href="{{urlPath}}"><h4>{{name}}</h4></a>
{{/projects}}
</div>
</div>
