{{% handler:NewPost}}{{!

This is the mustache template file for the tap tracker example.

}}

<h3>{{title}}</h3>

<div class="row">
<div class ="large-6 columns">

{{#userStory}}



	<dl>
	<dt>Type</dt>
	<dl>{{type}}</dl>
	<dt>Title</dt>
	<dl>{{title}}</dl>
	<dt>Description</dt>
	<dl>{{story}}</dl>
	<dt>Priority</dt>
	<dl>{{priority}}</dl>



	</dl>

</div>

<div class = "large-6 columns">
	<dl>
		<dt> Component </dt>
		<dl>{{component}} </dl>
		<dt> Epic link </dt>
		<dl> {{epic}} </dl>
		<dt>Estimates in hour</dt>
		<dl>{{estimate}}</dl>
		<dt>Status</dt>
		<dl>{{status}}</dl>
	</dl>



</div>


</div>







<h4>Comments</h4>
<div class="row large-12 columns">
{{#comments}}
{{#user}}
<div class="profile-pic-med avatar">{{initials}}</div>
<div class="message">
<p><strong>{{name}}</strong></p>
{{/user}}

<p>{{comment}}</p>
</div>

{{/comments}}

<form action="{{url}}/comments" method="post">
<div class="row">
<div class="large-12 columns">
<label>Comment
<input type="text" name="comment" />
</label>
</div>
</div>
<input type="submit" value="Post">
</form>
</div>

{{/userStory}}





