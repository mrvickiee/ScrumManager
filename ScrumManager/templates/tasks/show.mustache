{{% handler:NewPost}}{{!

This is the mustache template file for the tap tracker example.

}}

<div class="row medium-8 large-7 columns">

{{#task}}
<article class="blog-post">

<h3>{{title}}</h3>

<h4>Description</h4>
<h5 class="subheader">{{description}}</h5>

<h4>Priority</h4>
<h5 class="subheader">{{priority}}</h5>


<h4>Status</h4>
<h5 class="subheader">{{status}}</h5>


<h4>Estimates In Hour</h4>
<h5 class="subheader">{{estimates}}</h5>


<h4>Work Done</h4>
<h5 class="subheader">{{workDone}}</h5>

<a href="{{urlPath}}/assign">{{assignAction}}</a>

<h5>Assigned Team members</h5>

{{#comments}}
{{#user}}
<p><strong>{{name}}</strong></p>
{{/user}}
<p>{{comment}}</p>
{{/comments}}

<form action="{{url}}/comments" method="post">

<div class="row">
<div class="large-12 columns">
<label>Comment
<input type="text" name="comment" />
</label>
</div>
</div>
<input type="submit" value="Post">

</form>

</article>
{{/task}}

</div>





