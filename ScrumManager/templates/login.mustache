<title>Scrum Manager</title>
</head>
<body>



<br />
<br />
<div class="row">
{{#callout}}
<div class="callout {{type}}">
<p>{{message}}</p>
</div>
{{/callout}}
<div class="medium-6 medium-centered large-4 large-centered columns">

<form method="POST" action="login" id="login">
<div class="row column log-in-form">
<h4 class="text-center">Log in with you email account</h4>
<label>Email
<input type="text" placeholder="somebody@example.com" name="email" id="email">
</label>
<label>Password
<input type="password" placeholder="Password" name="password" id="password">
</label>
<input id="show-password" type="checkbox" onclick="chg()"><label for="show-password">Show password</label>
<button type="submit" name="Login" class="button expanded">Login</button>
<p class="text-center"><a href="#">Forgot your password?</a></p>
</div>
</form>

</div>
</div>

<script>
function chg(){
    if (document.getElementById("password").type == "text"){
        document.getElementById("password").type = "password"
    }else{
        document.getElementById("password").type = "text"
    }
}
</script>

</body>
</html>

